    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug JetModule",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app/ref_app",
            "args": [],
            "environment": [
                { "name": "OPENDAQ_MODULES_PATH", "value": "${workspaceRoot}/build/bin" }
            ],
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "preLaunchTask": "CMake: build",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug JetServerTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/JetServerTest",
            // "args": ["--gtest_filter=YourTestSuite.YourTest"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "build", // This should match the label of your build task in tasks.json
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug ConvertersTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/ConvertersTest",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
